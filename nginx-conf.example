# HTTPS server
#
server {
    listen 443;
    server_name slasyz.ru;

    access_log /var/log/nginx/access.log;
    root /home/sl/www/slasyz.ru;
    index index.html index.htm index.php;

    error_page 400 403 404 500 = @django;

    location ~ [^/]\.php(/|$) {
        fastcgi_split_path_info ^(.+?\.php)(/.*)$;
        fastcgi_intercept_errors on;
        fastcgi_pass unix:/var/run/php5-fpm.sock;
        fastcgi_index index.php;
        include fastcgi_params;
    }

    location = / {
        try_files "" @django;
    }
    location / {
        try_files $uri $uri/ @django;
    }

#   location @django {
#       proxy_pass http://127.0.0.1:8000;
#       proxy_redirect off;
#       include proxy_params;
#       client_max_body_size 10m;
#       proxy_connect_timeout 90;
#   }
    location @django {
        include fastcgi_params;
        fastcgi_split_path_info ^()(.*)$;
        fastcgi_pass 127.0.0.1:8000;
    }

    location /static/ {
        #root /home/sl/django/slasyz_ru/slasyz_ru;
        #alias /home/sl/django/slasyz_ru/slasyz_ru/static/;
        try_files /home/sl/django/slasyz_ru/upload/static/$uri /home/sl/django/slasyz_ru/slasyz_ru/static/$uri =404;
    }

    ssl on;
    ssl_certificate /etc/ssl/localcerts/slasyz.ru.pem;
    ssl_certificate_key /etc/ssl/localcerts/slasyz.ru.key;

    ssl_session_timeout 5m;

    ssl_protocols SSLv3 TLSv1 TLSv1.1 TLSv1.2;
    ssl_ciphers "HIGH:!aNULL:!MD5 or HIGH:!aNULL:!MD5:!3DES";
    ssl_prefer_server_ciphers on;
}
